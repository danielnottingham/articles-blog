<% if notice %>
  <div class="alert card green lighten-4 green-text text-darken-4">
    <div class="card-content">
	    <p><i class="material-icons">check_circle</i><span><%= notice %></span></p>
    </div>
  </div>
<% end %>

<% if alert %>
  <div class="alert card red lighten-4 red-text text-darken-4">
    <div class="card-content">
	    <p><i class="material-icons">report</i><span><%= alert %></span></p>
    </div>
  </div>
<% end %>
